/* pages/message_info/message_info.wxss */

.page {
  width: 100%;
  height: 100%;
  margin: 30rpx 0;
  padding: 0 30rpx;
  background-color: #fff;
}

.message_cell {
  display: flex;
  padding: 20rpx 0;
  align-items: center;
}

.message_title {
  width: 100rpx;
  font-size: 35rpx;
  font-weight: bold;
}

.message_content {
  width: 600rpx;
  font-size: 30rpx;
  margin-right: 20rpx;
  word-break: keep-all;
  word-wrap: break-word;
}

.button_nav {
  margin: 10rpx;
  width: 660rpx;
  height: 70rpx;
  font-size: 30rpx;
  border: 2rpx solid #FA4F7D;
  border-radius: 20rpx; 
  text-align:center;
  vertical-align: middle;
}