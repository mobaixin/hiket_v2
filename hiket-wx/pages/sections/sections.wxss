.search {
  width: 100%;
}

.search_arr {
  border: 1px solid #d0d0d0;
  border-radius: 10rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.search_arr input {
  margin-left: 70rpx;
  height: 60rpx;
  border-radius: 5px;
  padding: 5rpx
}

.page_row {
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
}

.search_icon {
  margin: 10rpx 10rpx 10rpx 10rpx;
  position: absolute;
  left: 25rpx;
  z-index: 2;
  width: 46rpx;
  height: 46rpx;
  text-align: center;
}
