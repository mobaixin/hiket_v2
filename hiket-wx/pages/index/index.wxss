/**index.wxss**/
.swiper {
  height: 400rpx;
  width: 100%;
}

.swiper image {
  height: 100%;
  width: 100%;
}

.recommend {
  display: flex;
  width: 100%;
  height: 100rpx;
  background: linear-gradient(to right, rgb(247, 92, 115), rgb(250, 166, 166));
  margin-top: 30rpx;
  margin-bottom: 60rpx;
  align-items:center;
}

.recommend_text {
  font-size: 50rpx;
  flex: 1;
  margin-left: 10rpx;
}

.mine_arrow{
  margin-right:10rpx; 
  width:10rpx;
  zoom: 1.3;
}

/*伪元素实现右箭头*/
.mine_arrow:after{
  content: " ";
  display: inline-block;
  height:20rpx;
  width:20rpx;
  border-top:2px solid #b2b2b2; 
  border-right: 2px solid #b2b2b2;
  transform: rotate(45deg);
  margin-left: 5rpx;
}

